<h1>Edit Trailer Information</h1>

<form action="/movies/<%= params[:movie_id] %>/trailers/<%=@trailer.id%>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  
  <label>  
    Title:
    <input type="text" name="title" value="<%= @trailer.name %>" />
  </label>

  <label>  
    Embed URL:
    <input type="text" name="embed_url" value="<%= @trailer.embed_url %>" />
  </label>

  <button>Update</button>
</form>