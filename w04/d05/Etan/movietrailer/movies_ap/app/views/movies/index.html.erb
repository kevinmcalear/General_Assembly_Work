<body>
  <h1>Movie List</h1>
  <% @movies.each do |movie| %>
    <div>Title: <%= movie.title %></div>
    <br />
    <div>Year: <%= movie.year %></div>
    <br />
    <div>Poster: <img src = "<%= movie.poster_url %>" height = "100" width "70"/>
    <div><a href="/movies/<%= movie.id %>">Click here for more info.</a></div>
    <br />
  <% end %>  

<form action="/movies/new">
    <input type="submit" value="Submit Your Own Movie!">
</form>
</body>