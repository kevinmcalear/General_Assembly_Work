<h1>Movie Detail</h1>


<img src="<%=@movie.poster_url%>" />


<table>
  <tr>
    <td>Movie Title</td>
    <td><%=@movie.title%></td>
  </tr>
  <tr>
    <td>Year Released</td>
    <td><%=@movie.year_released%></td>
  </tr>
  <tr>
    <td>Genre</td>
    <td><%=@movie.genre%></td>
  </tr>
  <tr>
    <td>Director</td>
    <td><%=@movie.director%></td>
  </tr>
</table>



<table border="1" solid black>
  <tr>
    <th>Character Name </th>
    <th>Portrayed By</th>
  </tr>
  <% @characters.each do |character| %>
  <tr>
    <td><a href="/movies/<%=@movie.id%>/characters/<%=character.id%>"><%=character.name%></a></td>
    <td><%=character.actor%></td>
  </tr> 
  <% end %>
</table>


<iframe id="ytplayer" type ="text/html" width="640" height="390" src="http://www.youtube.com/embed/<%=@trailer.embed_url%>" frameborder="1" />
