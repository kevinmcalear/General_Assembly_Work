<h1>Edit a Trailer</h1>
<button><a href="/movies/<%= @movie.id %>/trailers">Go Back to Trailer List</a></button>
</div>

<form action="/movies/<%= @movie.id %>/trailers/<%= @trailer.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />

  <label>
    <input class="input" type="text" name="title" value="<%= @trailer.title %>" />
  </label>
  
  <label>
    <input  class="input" type="text" name="embed_url" value="<%= @trailer.embed_url %>" />
  </label>
  
  <button class="button">Edit</button>
</form>