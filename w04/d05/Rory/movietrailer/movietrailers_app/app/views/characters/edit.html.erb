<h1> Update a Character </h1>

<form action="/movies/<%= params[:movie_id] %>/characters/<%= @character.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  <label>
    Name:
    <input type="text" name="name" value="<%= @character.name %>" />
  </label>

  <label>
    Photo URL:
    <input type="text" name="photo_url" value="<%= @character.photo_url %>"/>
  </label>

  <label>
    Movie:
    <select name="movie">
     <% Movie.all.each do |movie| %>
     <option value="<%= Movie.find_by(id: params[:movie_id]).title %>">
      <%= movie.title %>
    </option>
    <% end %>
  </label>

  <input type="submit" value="Update your character" />
</form>