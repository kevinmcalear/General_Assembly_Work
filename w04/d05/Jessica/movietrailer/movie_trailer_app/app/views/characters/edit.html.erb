<h1>Edit <%= @character.name %></h1>

<form action="/movies/<%= @character.movie_id %>/characters/<%= @character.id %>" method="POST">
  <input type="hidden" name="_method" value="patch" />
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  <label>
    Name:
    <input type="string" name="name" value="<%= @character.name %>"/>
  </label>

  <label>
    Photo URL:
    <input type="text" name="photo_url" value="<%= @character.photo_url %>"/>
  </label>


  <button>Edit this Character</button>
</form>