
<h1><%= @trailer.title %></h1>
<ul>
  <li><iframe width="560" height="315" src="<%= @trailer.embed_url %>" frameborder="0" allowfullscreen></iframe></li>
</ul>

<form action="/movies/<%= @trailer.movie_id %>/trailers/<%= @trailer.id %>" method="POST" >
<input type="hidden" name="_method" value="DELETE" />
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  <button>Delete this Trailer!</button>
</form>