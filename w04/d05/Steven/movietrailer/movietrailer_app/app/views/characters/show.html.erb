<h1><%= @character.name %></h1>

<p><img src="<%= @character.photo_url %>" width="500"></p>

<a href="/movies/<%= @movie.id %>/characters/<%= @character.id %>/edit">Edit <%= @character.name %></a>

<form action="/movies/<%= @movie.id %>/characters/<%= @character.id %>" method="POST">
  <input type="hidden" name="_method" value="DELETE" />
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  <button>Delete This Character!</button>


</form>