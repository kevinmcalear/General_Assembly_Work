<h1><%= @spaceship.name %> </h1>

<img src="<%= @spaceship.photo_url %>" height="300"> 

<ul>
  <li><%= @spaceship.capacity %></li>
  <li><%= @spaceship.origin %></li>
  <li><%= @spaceship.species_allowed %></li>
  <li><%= @spaceship.purpose %></li>
</ul>

<a href="/spaceships/<%= @spaceship.id %>/aliens"> Aliens</a>
<a href="/spaceships/<%= @spaceship.id %>/aliens/new">New Alien</a>
<a href="/spaceships/<%= @spaceship.id %>/edit">Update Information</a>

<form action="/spaceships/<%= @spaceship.id %>" method="POST" >
  <input type="hidden" name="_method" value="DELETE" />
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  <button>Delete this Spaceship!</button>
</form>
<a href="/spaceships">All Spaceships</a>