<div class="top">
  <h1>Edit A Character</h1>
  <a href="/movies/<%=@movie.id %>/characters/<%= @character.id %>">Go Back Home</a>
</div>

<form action="/movies/<%=@movie.id %>/characters/<%= @character.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  <label>
    <input class="input" type="text" name="name" value="<%= @character.name %>" />
  </label>
  <p>
  <label>
    <input  class="input" type="text" name="photo_url" value="<%= @character.photo_url %>" />
  </label>
  </p>  
  <button class="button">Edit That Character!</button>
</form>