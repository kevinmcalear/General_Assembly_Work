<!-- show.html.erb -->
<header>
  <ul> 
    <li><a href="/movies"> List all movies </a></li>
    <li><a href="/movies/new"> Add a movie </a> </li>
    <li><a href="/movies/<%= @movie.id %>/characters/new">Add a character</a></li>
    <li><a href="/movies/<%= @movie.id %>/edit"> Edit the film </a></li>
    <li><a href="/movies/<%= @movie.id %>/trailers/new" />Add a Trailer</a></li>
    <li><form action="/movies/<%= @movie.id %>" method="POST">
      <input type="hidden" name="_method" value="DELETE" />
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
      <button>Delete this Movie!</button></form>
    </li>

  </ul>
</header>

<h1><%= @movie.title %></h1>
<h2> <%= @movie.year %></h2>
<img src="<%= @movie.poster_url %>" height="400">

<h2> Characters </h2>
<ul><%@characters.each do |character|%>
  <li><h3><%=  character.name %> </h3></li>
  <ul><li><img src="<%= character.photo_url %>" width="300" /> </li></ul>
  <li><a href="/movies/<%= @movie.id %>/characters/<%= character.id %>/edit">Edit this Character</a></li>
  <% end %>
</ul>

<h2> Trailer </h2>
<ul> <% @trailers.each do |trailer| %>
  <li> <iframe src="<%= trailer.embed_url %>" width="960" height="585" frameborder="2" /> </li>
  <% end %>
</ul>

