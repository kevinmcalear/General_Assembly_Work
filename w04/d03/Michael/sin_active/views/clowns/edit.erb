<h1>Edit <%= @clown.name %><h1>

<form action="/clowns/<%=@clown.id %>" method="POST">
  <input type="hidden" name="_method" value="PUT" />
  
  <label>
    Name:
    <input type="text" name="name" value= "<%= @clown.name%>" />
  </label>

  <label>
    Talent:
    <input type="text" name="talent" value= "<%= @clown.talent%>" />
  </label>

  <label>
    Sings?
    <input type="checkbox" name="is_singer" <%=@clown.is_singer ? checked : nil %> />  
  </label>

  <label>
    happiness_level
    <input type="text" name="happiness_level" value= "<%= @clown.happiness_level%>" />  
  </label>

  <button>Incept this clown</button>
</form>
