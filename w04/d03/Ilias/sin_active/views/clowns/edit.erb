<h1>Edit <%=@clown.name%> </h1>

<form action="/clowns/<%=@clown.id%>" method="POST">
  <input type="hidden" name="_method" value="PUT"/>
  <label>
    name: <input type="text" name="name" value="<%=@clown.name%>"/>
  </label>
  <label>
    Talent <input type="text" name="talent" value="<%=@clown.talent%>"/>
  </label>
  <label>
    Sings? <input type="checkbox" name="is_singer" <%=@clown.is_singer ? "checked" : "" %>/>
  </label>
  <br/><button>Incept this Clown!</button>

</form>
