<h2><%=@character.name%></h2>
<img src="<%= @character.photo_url %>"><br>
<a href="/movies/<%=@character.movie_id%>/characters/<%=@character.id%>/edit">Edit this character</a>

<form action="/movies/<%= @movie.id %>/characters/<%=@character.id%>" method="POST" >
  <input type="hidden" name="_method" value="DELETE" />
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  <button>Delete this character</button>
</form>

<a href="/movies/<%=@character.movie_id%>/characters">Back to all characters</a>
